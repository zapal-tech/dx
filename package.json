{
  "name": "@zapal/dx",
  "version": "0.0.0",
  "description": "Zapal development experience. Set of code quality tools configurations, rule sets and utilities. Prettier, ESLint, TypeScript, Lint-Staged, etc.",
  "keywords": [
    "zapal",
    "dx",
    "development",
    "experience",
    "eslint",
    "prettier",
    "typescript",
    "code",
    "quality",
    "tools",
    "configurations"
  ],
  "homepage": "https://github.com/zapal-tech/dx#readme",
  "bugs": {
    "url": "https://github.com/zapal-tech/dx/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zapal-tech/dx.git"
  },
  "license": "MIT",
  "author": {
    "name": "Zapal",
    "email": "hello@zapal.tech",
    "url": "https://www.zapal.tech"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && for tool in prettier eslint commitlint; do pnpm run build:$tool; done && copyfiles src/typescript package.json README.md LICENSE.md dist",
    "build:commitlint": "tsup src/commitlint/index.js --out-dir dist/commitlint --target es2020 --format esm --sourcemap",
    "build:eslint": "tsup src/eslint/index.js --out-dir dist/eslint --target es2020 --format esm --sourcemap",
    "build:lint-staged": "tsup src/lint-staged/index.js --out-dir dist/lint-staged --target es2020 --format esm --sourcemap",
    "build:prettier": "tsup src/prettier/index.js --out-dir dist/prettier --target es2020 --format esm --sourcemap",
    "build:typescript": "tsup -i 'src/typescript --out-dir dist/typescript'",
    "dev:commitlint": "pnpm build:commitlint --watch",
    "dev:eslint": "pnpm build:eslint --watch",
    "dev:lint-staged": "pnpm build:lint-staged --watch",
    "dev:prettier": "pnpm build:prettier --watch",
    "dev:typescript": "pnpm build:typescript --watch",
    "lint": "eslint src",
    "prepare": "node ./scripts/prepare",
    "release": "pnpm lint && pnpm build"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/config-pnpm-scopes": "^19.5.0",
    "@eslint/js": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.44",
    "globals": "^15.9.0",
    "prettier-plugin-packagejson": "^2.5.2",
    "prettier-plugin-svelte": "^3.2.6",
    "typescript-eslint": "^8.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "copyfiles": "^2.4.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "tsup": "^8.2.4",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@commitlint/cli": ">=19 <20",
    "eslint": ">=9 <10",
    "lint-staged": ">=15 <16",
    "prettier": ">=3 <4",
    "typescript": ">=4.8.0 <6"
  },
  "peerDependenciesMeta": {
    "@commitlint/cli": {
      "optional": true
    },
    "eslint": {
      "optional": true
    },
    "lint-staged": {
      "optional": true
    },
    "prettier": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.10.0",
  "engines": {
    "node": ">=20.12"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
